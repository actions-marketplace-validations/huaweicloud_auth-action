{
  "name": "auth-action",
  "version": "1.0.0",
  "description": "华为云action统一鉴权",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",  
    "run": "node ./lib/main.js",  
    "package": "ncc build --source-map --license licenses.txt",  
    "lint-create": "eslint --init",
    "lint": "eslint src",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "debug": "ts-node-dev src/main.ts",
    "test": "jest --collectCoverage",
    "all": "npm run lint && npm run format && npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huaweicloud/auth-action.git"
  },
  "keywords": [
    "HuaweiCloud",
    "Authenticate"
  ],
  "author": "Chenyt26",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huaweicloud/auth-action/issues"
  },
  "homepage": "https://github.com/huaweicloud/auth-action#readme",
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.19.0",
    "jest": "^28.1.2",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
