{
  "name": "auth-action",
  "version": "v1.0.1",
  "description": "华为云action统一鉴权",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "package": "ncc build --license licenses.txt",
    "lint-create": "eslint --init",
    "lint": "eslint src",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "debug": "ts-node-dev src/main.ts",
    "test": "jest --collectCoverage",
    "all": "npm run test && npm run lint && npm run format && npm run build && npm run package"
  },
  "keywords": [
    "HuaweiCloud",
    "Authenticate"
  ],
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.19.0",
    "jest": "^28.1.2",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@huaweicloud/huaweicloud-sdk-core": "^3.0.48-rc",
    "@huaweicloud/huaweicloud-sdk-iam": "^3.0.48-rc"
  }
}
